#add non-free
printf "add non-free sources ...\n"

curDir=$(dirname $0)
${curDir}/nonfree

apt-get update

# install firmware
printf "install firmware ...\n"
for fw in $(fw-detect -y ); do
	printf "${fw}\n"
	fw-detect -i $fw
done 
